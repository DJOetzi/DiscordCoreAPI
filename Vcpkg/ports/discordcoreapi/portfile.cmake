if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 22015f0725407c46021782164b44f44e0daad4b1
	SHA512 4e8f53a525ae4e6f405fd499c82fdd9b88cbeb9abd8711fd8ec2d3cd91215f5ffae0cc246ab667c9a486d3cfdeae6ab594e1169077630bc8ddc837884c90cbc3
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

