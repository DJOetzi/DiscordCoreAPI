if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 98fa121171343f4ed6e9ae12fd9e4c05da1e6d80
	SHA512 8657dc228d7e3feccda433e956690800375f50f25b712da95890c2a10c8f03a00c1c9e852e36776e91b23d41b54355dc29d27cbdf7ec4d081b8bedd92ea84436
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

vcpkg_cmake_install()

