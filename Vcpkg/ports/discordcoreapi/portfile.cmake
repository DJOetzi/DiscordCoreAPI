if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF ad2c6516ca1672c78ff43c3760fd9c85e0bc0e6c
	SHA512 d3191678e55821eaeff93c1851062b70c5382697133bea62d6873e29346d83d57365e160b659b4169136bfb52c6a803540883630478721d3001d2bbf4ee175cc
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

vcpkg_cmake_install()

