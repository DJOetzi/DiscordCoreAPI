if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF deafc740184e0f59596f7d346ffd23a0f2690bd8
	SHA512 728330115d1e2af921019d82039cec9d9df961be0e6e2f3a54782a5b2a5040c141955c4319060a3b1a164113ce134e5de22853b20b08b32f6071022bb226c236
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

vcpkg_cmake_install()

