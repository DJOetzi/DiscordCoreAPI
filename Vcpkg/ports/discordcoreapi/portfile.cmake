if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 125888e83894aefaeae9c5421fb9e88651664250
	SHA512 2aa8b840ba948e6b2051e62b47079786bc80c7be230db69ae70e107924018377f49e5d910b7ff1ddc02d377978e57a6ef8217fdde5aa71a3e00afb2578b479c0
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

vcpkg_cmake_install()

